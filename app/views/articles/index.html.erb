<%= provide(:title, 'Articles') %>
<div class="container">
    <div class="row center">
        <h1>Articles</h1>
        <% @articles.each do |x| %>
            <div class="col-md-4 col-sm-6">
                <div class="image">
                    <% if x.picture? %>
                        <%= link_to image_tag(x.picture.url),
                                 article_path(x.id) %>
                    <% else %>
                        <%= link_to image_tag("image.png"),
                        article_path(x.id) %>
                    <% end %>    
                     <!--<p id="article_p">  
                        <%= x.text %>
                    </p>-->
                  
                    <div class="article-title center">
                        <h4><%= link_to x.title, article_path(x.id) %></h4>
                        <p><%= "Author: #{x.author_name}" %></hp>
                        <br>
                        <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>  &nbsp
                        <%= x.thumbs_up_total %>  &nbsp
                        <i class="fa fa-comments" aria-hidden="true"></i>
                    </div>
                    <% if logged_in? && current_user.admin? %>
                        <%= link_to "Delete", x, method: :delete, data: { confirm: "Are You Sure?" },
                            class: "btn btn-sm btn-danger" %>
                    <% end %>
                </div>    
            </div>    
        <% end %>
    </div>
</div>