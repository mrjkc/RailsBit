<div class="container">
    <div ="row">
        <div class="col">
            <%= @articles.find_each do |x| %>
                <h4 ><%= link_to image_tag("ruby.png", size: "100x100"),
                         article_path(x.id) %>
                    <a><%= link_to x.title, article_path(x.id), 
                           class: "article_title" %></a>
                </h4>
                <p><%= x.text %></p>
                <b><%= "Author: #{x.author_name}" %></b>
                <a><%= x.liked %></a>
                <hr>
                    
            <% end %>
        </div>
    </div>
</div>