<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row center">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>
        
            <h4><%= f.label :email %></h4>
            <%= f.email_field :email, class: 'form-control forms-style' %>
            
            <h4><%= f.label :password %></h4>
            <%= f.password_field :password, class: 'form-control forms-style' %>
            
            <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span style="color:white">Remember me on this computer</span>
            <% end %>
            
            <%= f.submit "Log in", class: "btn btn-primary lg-buttons-width" %>
        <% end %>
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
</div>
