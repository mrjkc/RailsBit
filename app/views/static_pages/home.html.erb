<% provide(:title, 'Home') %>
<!-- Header daily quote -->
<div class="container" id="white-line">
    <div class="row">
        <div id="header-title">
            <b id="daily_quote_title">Daily Quote:</b>
            <p id="daily_quote" class="center">“I can accept failure. 
               Everyone fails at something. But I can’t accept not trying.”</p>
            <b id="signature">-Michael Jordan</b>
        </div>
    </div>    
</div>
<!-- switch between front end and backend -->
<div class="jumbotron">
    <h4>Everything About (Railsy) Web Development.</h4> 
    <div class="btn-group">
    <%= link_to "Front End", root_path, class: "btn btn-sm btn-default sharp" %>
    <%= link_to "Back End"  , backend_path, class: "btn btn-sm btn-danger sharp" %>
    </div>
</div>

<!-- Welcome video -->
<div class="container">
    <div class="row">
        <div id="header-title">
            <iframe width="100%" height="700"
                src=<%= "https://www.youtube.com/embed/0NjkfHbK6BE" %> frameborder="0" allowfullscreen>
            </iframe>
        </div>
    </div>    
</div>

<div class="container">
    <div class="row">
        <h1>Articles</h1>
    </div>    
</div>

<!-- iteration count variable -->
    <% break_int   = 0 %>
    <% break_video = 0 %>
<!-- Display Articles -->
<div class="container">
    <div class="row">
        <%= @articles.find_each do |x| %>
            <div class="col col-sm-4 col-md nopadding">
                <div id="image" class="center">
                    <% if x.picture? %>
                        <%= link_to image_tag(x.picture.url, size: "400x300", class: "gravatar"),
                                              article_path(x.id)  %>
                    <% else %>
                        <%= link_to image_tag("ruby.png", size: "400x300", class: "gravatar"),
                                          article_path(x.id)  %>
                    <% end %>                      
                        <h4><%= link_to x.title, article_path(x.id), id: "title_p" %></h4>
                        <!--<%= truncate(x.text, :length => 145) %> -->
                </div>
            </div> 
            <!-- break out of block when article count reaches 6 -->
            <% break_int += 1 %>
            <% break if break_int == 6 %>
        <% end %>
        <div class="center">
            <%= link_to "Show More Articles", articles_path, class: "btn btn-md btn-default" %>
        </div>
    </div>
</div>
<!-- Display videos -->
<div class="container"> 
    <div class="row">
        <h1>Videos</h1>
        <%= @videos.find_each do |x| %>
            <div class="col col-sm-4 col-md">
                <div id="video" class="center">
                    <% puts "#{x.link}" %>
                    <iframe width="380" height="300" id="video"
                        src=<%= "https://www.youtube.com/embed/#{x.link}" %> frameborder="0" allowfullscreen>
                    </iframe>
                    <h4>Stick Your Video Here <!-- add id=""title_p" when you will have embeded ruby --></h4>
                </div>
            </div>
            <% break_video += 1 %>
            <% break if break_video == 6 %>
        <% end %> 
        <div class="center">
            <%= link_to "Show More Videos", videos_path, class: "btn btn-md btn-default" %>
        </div>
    </div>
</div>
<!-- subscription form, pure bootstrap -->
<section>
    <div class="well">
        <div class="container text-center">
          <h2>Subscribe</h2>  
          <p style="color: black">Enter Your Name and Email</p>
          <form action="" class="form-inline">
              <div class="form-group">
                  <label for="subscription">Subscribe</label>
                  <input type="text" class="form-control" id="subscription" placeholder="Your Name">
              </div>
              <div class="form-group">
                  <label for="email">Email Address</label>
                  <input type="text" class="form-control" id="email" placeholder="Email">
              </div>
              <button type="submit" class="btn btn-default">Subscribe</button>
          </form>
        </div>
    </div>
</section>
