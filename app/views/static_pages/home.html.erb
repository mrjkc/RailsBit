<% provide(:title, 'Home') %>

<!-- Header daily quote -->
<div class="container">
    <div class="row">
            <b id="daily_quote_title">Daily Quote:</b>
            <blockquote id="daily_quote" class="center">“<%= @daily_quote.quote %>”</blockquote>
            <i id="signature"><i>-<%= @daily_quote.author %></i></i>
    </div>   
</div>
<!-- switch between front end and backend -->
<div class="jumbotron">
    <h2 id="jumbotron-text">Become a Railsy Web Developer.</h2> 
    <!--<div class="btn-group">-->
    <%= link_to "Sign Up Now!", signup_path, class: "btn btn-md btn-default" %>
    <!--<%= link_to "Back End"  , backend_path, class: "btn btn-sm btn-danger sharp" %> -->
    <!--</div>-->
</div>

<!-- Welcome video -->
<div class="container">
    <div class="row">
        <div>
            <iframe width="100%" height="700"
                src=<%= "https://www.youtube.com/embed/0NjkfHbK6BE" %> frameborder="0" allowfullscreen>
            </iframe>
        </div>
    </div>    
</div>

<div class="container">
    <div class="row">
        <h1>Articles</h1>
    </div>    
</div>
<!-- iteration count variable -->
    <% break_int   = 0 %>
    <% break_video = 0 %>
<!-- Display Articles -->
<div class="container">
    <div class="row center">
        <%= @articles.find_each do |x| %>
            <div class="col-md-4 col-xs-6">
                <div class="image">
                <% if x.picture? %>
                        <%= link_to image_tag(x.picture.url),
                                         article_path(x.id)%>
                <% else %>
                        <%= link_to image_tag("ruby.png"),
                                    article_path(x.id)  %>
                <% end %>                      
                    <h4><%= link_to x.title, article_path(x.id), id: "title_p" %></h4>
                    <!--<%= truncate(x.text, :length => 145) %> -->
                </div>    
            </div> 
            <!-- break out of block when article count reaches 6 -->
            <% break_int += 1 %>
            <% break if break_int == 6 %>
        <% end %>
        <div class="center">
            <%= link_to "Show More Articles", articles_path, class: "btn btn-md btn-default" %>
        </div>
    </div>
</div>
<!-- Display videos -->
<hr>
<div class="container"> 
    <div class="row">
        <h1>Videos</h1>
        <%= @videos.find_each do |x| %>
            <div class="col-md-3 col-sm-6 center">
                    <iframe src=<%= "https://www.youtube.com/embed/#{x.link}" %>
                                    frameborder="0" allowfullscreen class="video">
                    </iframe>
                    <h4>Your video goes here <!-- add id=""title_p" when you will have embeded ruby --></h4>
            </div>
            <% break_video += 1 %>
            <% break if break_video == 8 %>
        <% end %> 
        <div class="center">
            <%= link_to "Show More Videos", videos_path, class: "btn btn-md btn-default" %>
        </div>
    </div>
</div>
<!-- subscription form, pure bootstrap -->
<!--<div class="container">-->
<div id="subscribe">
    <div class="container center">
         <%= react_component('SubscribeMessage', name: 'for our Newsletter') %>
         <p class="subscribe_text">Enter Your Name and Email</p>
         <%= form_for :subscription do |subs| %>
            <%= subs.label "Name" %>
            <%= subs.text_field :name, class: "fields" %>
                
            <%= subs.label "Email" %>
            <%= subs.text_field :email, class: "fields" %>
                
            <%= subs.submit 'Subscribe', class: "btn btn-sm btn-default buttons-width" %>
        <% end %>    
    </div>
</div>
