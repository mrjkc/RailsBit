<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row center">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <b><%= render 'shared/error_messages' %></b>
            
            <h4><%= f.label :name %></h4>
            <%= f.text_field :name, class: 'form-control forms-style' %>
            
            <h4><%= f.label :email %></h4>
            <%= f.email_field :email, class: 'form-control forms-style' %>
            
            <h4><%= f.label :password %></h4>
            <%= f.password_field :password, class: 'form-control forms-style' %>
            
            <h4><%= f.label :password_confirmation, "Confirmation" %></h4>
            <%= f.password_field :password_confirmation, class: 'form-control forms-style' %>
            
            <%= f.submit "Create my account", class: "btn btn-primary lg-buttons-width" %>
        <% end %>
    </div>
</div>    