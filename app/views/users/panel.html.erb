            <div class="carousel">
                <div class="slide">
                    <%= @userpanel.find_each do |pnl| %>
                        <% if pnl.ror_video == true %>
                            <iframe src=<%= "https://www.youtube.com/embed/#{pnl.user_video}" %>
                                        frameborder="0" allowfullscreen>
                            </iframe>
                        <% end %>
                    <% end %>
                </div>
            </div>
            <h5>Skill Progress Bar</h5>
    	    <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width:30%">
                  <span class="sr-only">70% Complete</span>
                </div>
            </div>
            <div style="border-top: 15px dotted #f99f1a; margin-top: 30px;"></div>
        </li>
        <li>
            <h4 class="underline">Youtuber Channels That You Should Check Out</h4>
            <div class="col-sm-6 col-xs-12">
                <h5>CodingPhase</h5>
                <%= image_tag('codingphase.jpg') %>
            </div>
            <div class="col-sm-6 col-xs-12">
                <h5>Chris Sean</h5>
                <%= image_tag('chrissean.jpeg') %>
            </div>
                <div class="col-sm-6 col-xs-12">
                <h5>John Morris</h5>
            <%= image_tag('johnmorris.jpeg') %>
            </div>
                <div class="col-sm-6 col-xs-12">
                <h5>Chris Hawkes</h5>
            <%= image_tag('chrishawkes.jpg') %>
            </div>
            
        </li>
    </ul>
</div>
<% end %>